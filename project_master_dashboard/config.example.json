{
  "api": {
    "baseUrl": "http://localhost:8000",
    "authToken": "",
    "refreshInterval": 30000
  },
  "scan": {
    "enabled": true,
    "directories": [
      "./src/task_manager/data/projects",
      "./tasks"
    ],
    "depth": 2,
    "includePatterns": ["*.json", "*.yaml", "*.md"],
    "excludePatterns": ["node_modules", ".git", "dist", "build"]
  },
  "ui": {
    "theme": "light",
    "defaultView": "projects",
    "refreshInterval": 30000,
    "showCompletedTasks": true
  }
}
